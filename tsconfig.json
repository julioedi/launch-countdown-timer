{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",  // Base URL set to "src"
    "paths": {
      "@root/*": ["src/*"]  // This maps any path starting with @ to src/*
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude":[
    "/assets/img",
    "assets/img",
  ],
}
